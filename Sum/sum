import java.util.Scanner;

public class sum {

    public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.print("Enter a positive integer: ");
		int num = scan.nextInt();	
		scan.close();
		
		int sum = 0;

		for(int i = 1; i <= num; ++i) {
            sum += i;
        }
	        System.out.println("Sum: " + sum);
	    }
	} 	
